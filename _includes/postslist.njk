<div class="posts-list">
  {%- for post in postslist | reverse %}
    <article class="post-item {% if post.url == url %}active{% endif %}">
      
      {# Gambar kecil (thumbnail) jika ada #}
      {% if post.data.image %}
      <div class="post-thumb">
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" loading="lazy">
      </div>
      {% endif %}

      <div class="post-content">
        <header>
          <time class="post-date" datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate("dd LLL yyyy") }}
          </time>
          <h2 class="post-title">
            <a href="{{ post.url }}">{{ post.data.title or post.url }}</a>
          </h2>
        </header>

        {% if post.data.description %}
          <p class="post-excerpt">{{ post.data.description | truncate(120) }}</p>
        {% endif %}

        <footer class="post-meta">
          {% for tag in post.data.tags | filterTagList %}
            {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
            <a href="{{ tagUrl }}" class="post-tag">#{{ tag }}</a>
          {% endfor %}
        </footer>
      </div>

    </article>
  {%- endfor %}
</div>

<style>
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    margin: 2rem 0;
  }

  .post-item {
    display: grid;
    grid-template-columns: 150px 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  /* Responsive: stack on mobile */
  @media (max-width: 600px) {
    .post-item { grid-template-columns: 1fr; gap: 1rem; }
    .post-thumb { height: 180px; }
  }

  .post-thumb img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid var(--border-color);
  }

  .post-date {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--text-color);
    opacity: 0.6;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-title {
    margin: 0.3rem 0;
    font-size: 1.4rem;
    line-height: 1.2;
  }

  .post-title a {
    text-decoration: none;
    color: var(--link-color);
  }

  .post-title a:hover { text-decoration: underline; }

  .post-excerpt {
    font-size: 0.95rem;
    margin: 0.5rem 0;
    line-height: 1.5;
    color: var(--text-color);
    opacity: 0.8;
  }

  .post-tag {
    font-size: 0.8rem;
    margin-right: 8px;
    opacity: 0.6;
    text-decoration: none;
    font-style: italic;
  }

  .post-tag:hover { opacity: 1; color: var(--link-color); }
</style>