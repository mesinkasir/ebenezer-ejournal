---
layout: layouts/base.njk
---
        <header class="list-header">
            <h2 ><a href="{{page.url}}">{{title}}</a></h2>
            <p class="tagline">{{description}}</p>
        </header>

        <section class="contact-container">
            <form action="{{formspree_id}}" method="POST" class="contact-form">
                <div class="form-group">
                    <label for="full-name">Full Name</label>
                    <input type="text" name="name" id="full-name" placeholder="John Doe" required>
                </div>

                <div class="form-group">
                    <label for="email-address">Email Address</label>
                    <input type="email" name="_replyto" id="email-address" placeholder="john@example.com" required>
                </div>

                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" name="subject" id="subject" placeholder="Subject" required>
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea rows="5" name="message" id="message" placeholder="How can I help you?" required></textarea>
                </div>

                <input type="text" name="_gotcha" style="display:none">

                <button type="submit" class="submit-btn">Send Message</button>
            </form>

            <aside class="contact-sidebar">
               {{content | safe }}
                <div class="social-links">
                    {% for s in social %}<a href="{{ s.url }}">{% icon "fab", s.icon %} {{ s.title }}</a><br>{% endfor %}
                </div>
            </aside>
        </section>